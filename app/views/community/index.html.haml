=render "community_nav"
          
.container
  .row
    .span12.center
      %h1.big-title#community-title Community
    .span10.offset1.center
      %h2.mb-15
        =snippet_text(:community_collect_intro, "Discover unseen work and emerging photography talent.\nJoin the Unseen Community and start collecting your own works by saving them to you profile").gsub(/\n/, '<br/>').html_safe
        %small=edit_snippet_link(:community_collect_intro)
  .row.mt-2
    .span12
      .row#photo-list
        =render "photos", :items => @photos
      .row.mb-2
        .span12.center
          =link_to("See all", community_photos_path, :id => "community-black-btn-photos", :class => 'black-btn community-black-btn')

#intro.home_box{:class => next_home_background_class}
  .bg1  

.container
  .row.mt-2
    .span12
      %h2.center Popular events
   
  .row.mt-2
    .span12
      .row#event-list
        =render "events", :items => @events
      .row.mb-2
        .span12.center
          =link_to("Full programme", program_path, :id => "community-black-btn-programme", :class => 'black-btn community-black-btn')
            
#intro.home_box{:class => next_home_background_class}
  .bg1

.container
  .row.mt-2
    .span12
      %h2.center Unseen on Twitter
   
  .row.mt-2
    .span12
      .row#tweets
        -@tweets.each_slice(2) do |tweets|
          .span12
            .row
              -tweets.each do |tweet|
                .span6.mb-2
                  .row
                    .span1
                      =image_tag(tweet.image_url)
                    .span5
                      =auto_link(auto_link_twitter(tweet.text))
    .span12.center
      =link_to "Follow us", "https://twitter.com/intent/user?screen_name=UnseenPhotoFair", :id => "community-black-btn-twitter", :class => "black-btn community-black-btn", :target => "_blank"
    