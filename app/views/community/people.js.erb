<%if params[:page]%>
  <%if @people.next_page %>
    $('#more-people-btn').attr('href','<%=community_people_path(:page => @next_page)%>');
    $('#more-people-btn').fadeIn();
  <%else%>
    $('#more-people-btn').fadeOut();
    <%end%>
  <%else%>
