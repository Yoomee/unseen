=render "community/community_nav"
.container
  .row
    .span12
      %h2.home-title Log In
    .span4.offset2
      .login-form
        =semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |form|
          =form.inputs do
            =form.input :email, :label => false, :placeholder => "email", :wrapper_html => {:class => 'mb-0'}
            =form.input :password, :label => false, :placeholder => "password", :wrapper_html => {:class => 'mb-0'}
            =form.input :remember_me, :as => :boolean, :wrapper_html => {:class => 'mb-0'} if devise_mapping.rememberable?
            =hidden_field_tag :next, params[:next] if params[:next]
          =form.commit_button t(:login), :button_html => {:class => "black-btn", :data => {:"loading-text" => "Logging in..."}}
        %ul.unstyled
          %li= link_to "Not a member? Register here", new_registration_path(resource_name)
          %li= link_to "Forgot your password?", new_password_path(resource_name)
    .span4
      %h3.login-or or
      .login-auth-links
        =link_to("Login with Facebook", user_omniauth_authorize_path(:facebook), :class => "oauth-login-link facebook-login-link")
        =link_to("Login with Twitter", user_omniauth_authorize_path(:twitter), :class => "oauth-login-link twitter-login-link")
