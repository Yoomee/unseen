!!!5
%html
  %head
    %title Unseen
    -if Rails.env == "development"
      =stylesheet_link_tag("application")
    -else
      =stylesheet_link_tag("application", "http://f.fontdeck.com/s/css/SHL1Q62RRv8EROgGSyefc+MAifY/unseen.yoomee.com/16878.css")
    =javascript_include_tag("application")
    =csrf_meta_tags
    =yield :head
  -body_tag do
    .big_background.fade_in
    .container
      #header.row
        .span8
          professionals
          public
        .span4
          .pull-right
            login
            contact
            %i.icon-search.icon-white
            f
            t
        .span4
          %h1#site_logo
            %span
              unseen photo fair
            %span
            19-23 sept 2012
        .span8
          #nav.pull-right
            %ul.unstyled
              %li=link_to "home", root_path
              %li=link_to "fair", fair_path
              -Page.root.each do |page|
                %li=link_to_self(page)
    =yield_with_bootstrap(yield)