!!!5
%html
  %head
    %title Unseen
    -if Rails.env == "development"
      =stylesheet_link_tag("application")
    -else
      =stylesheet_link_tag("application", "http://f.fontdeck.com/s/css/SHL1Q62RRv8EROgGSyefc+MAifY/unseen.yoomee.com/16878.css")
    =javascript_include_tag("application")
    =csrf_meta_tags
    =yield :head
  -body_tag do
    -if current_page?(root_path)
      #fb-root
      :javascript
        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1&appId=246548905437706";
          fjs.parentNode.insertBefore(js, fjs);
          }(document, 'script', 'facebook-jssdk')
        );
      =yield
    -elsif current_page?(fair_path)
      =yield
    -else
      =render("layouts/header")
      =yield_with_bootstrap(yield)
      =render('layouts/footer')