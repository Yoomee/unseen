=render("layouts/header")
-if homepage_slideshow
  =render("slideshows/home_slideshow", :slideshow => homepage_slideshow)
  =link_if_can("Edit slideshow", [:edit, homepage_slideshow], :class => "pull-right mt-2 mr-2")
-else
  #home-slideshow
    .home-slideshow-inner
      .home-slide.home-slide-prev
      .home-slide.home-slide-active
        .home-slide-caption
          %h2.home-slide-title
            =link_to "Unseen is an international photo fair focussed on...", "#"
          =link_to raw("&rarr; Read more"), "#", :class=>"read_more"
          .dots
            .dot
            .dot
            .dot.active-dot
            .dot
            .dot
      .home-slide.home-slide-next
#are-you.strip
  .container
    .row
      .span12
        %h2.are-you-title
          We have an emerging program, discover what unseen offers you:
        %ul.are-you-list
          %li=link_to "Public", "/wireframes/highlights", :class=>"are-you-link category"
          %li=link_to "Collectors", "/wireframes/highlights", :class=>"are-you-link category"
          %li=link_to "First-time buyers", "/wireframes/highlights", :class=>"are-you-link category"
          %li=link_to "Professionals", "/wireframes/highlights", :class=>"are-you-link category"
          %li=link_to "VIP", "/wireframes/highlights", :class=>"are-you-link category"
          %li=link_to "Press", "/wireframes/highlights", :class=>"are-you-link category"
#parallax_1.parallax
#latest_news.strip
  .container
    .row
      .span12
        %h2.home-title
          News
    #latest_news.block-view.row
      -[news_pages.shift(4), news_pages.shift(4)].each do |pages|
        -pages.each do |page|
          .block-item.span4
            .block-image.fade_in
              =link_to(image_for(page, "300x200#"), page) if page.image
            .block-text
              %h3.block-title=link_to_self(page)
              %p.list_date_and_tag
                =page.created_at.strftime("%e %B %Y")
                -page.category_list.each do |category|
                  =tag_label(category.titleize)
              =link_to raw('&rarr; Read more'), page, :class => 'list_read_more'
      -if news_page.present?
        .row
          .span3.offset5
            =link_to("More news", news_page, :class => "black-btn more-middle")
=render('layouts/footer')
