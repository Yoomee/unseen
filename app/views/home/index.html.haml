-bg_nums = [1,2,3,4,5].shuffle
#unseen_big_logo
#intro.home_box{:class => "home_bg_#{cycle(*bg_nums)}"}
  =render("layouts/header")
#second.home_box
  .container
    .row
      .span6#latest_news
        %h2 Latest news
        -[news_pages.shift(2), news_pages.shift(2)].each do |pages|
          .row
            -pages.each do |page|
              .span3
                =link_to(image_for(page, "220x160"), page)
                =link_to_self(page)
        -if news_page.present?
          .row
            .span2
              =link_to("More news", news_page)
      .span6
        .span4.offset2
          %h4 Follow us
          .fb-like-box{:"data-href" => "http://www.facebook.com/UnseenPhotoFairAmsterdam", :"data-width" => "300", :"data-height" => "300", :"data-colorscheme" => "dark", :"data-show-faces" => "true", :"data-border-color" => "#000", :"data-stream" => "false", :"data-header" => "false"}
        .span4.offset2
          %h4 Twitter
          .tweet_box
            Check out our new website http://bt.co/KJklj
          .twitter_handle
            @UnseenPhotoFair
            %br
            about 2 hours ago
        .span4.offset2#newsletter_signup
          %h4 Sign up for newsletter
          =text_field_tag "email", "", :class => "span4"
          =link_to "#" do
            %i.icon-play.icon-white
            submit
