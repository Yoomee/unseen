.row
  .col-md-12
    %h2.mb-1=@event.title
  .col-md-12
    %p
      =@event.date.strftime('%a %o %B,')
      =@event.time_string_with_dots
    %p
      Venue:
      =@event.venue
.row.mt-2
  .col-md-12
    -if @event.image
      .mb-1
        =image_for_with_retina(@event, "540x")
        -if @event.image_caption
          %p.mt-1.event-image-caption=@event.image_caption
  .page_text.mb-2
    #page_text
      =simple_format(@event.description)