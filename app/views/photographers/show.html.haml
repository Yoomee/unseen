.container
  .row.mt-2
    .span2
      =image_for(photographer, "140x")
    .span8
      %h2 Photographers profile
      %h3.mb-2=title(photographer)
      %ul.tag-list.tag-list-horizontal
        -photographer.user_tags.each do |tag|
          %li
            =link_to_tag(tag)
  .row.mt-2.mb-2
    .span12
      SLIDESHOW
  .row
    .span6
      -if photographer.bio.present?
        .well.mb-1
          %h3 Bio
          =simple_format(photographer.bio)
      .well
        .row
          .span2
            %h3.mb-1.upcase These people are interested
            =link_to("Favourite", "#", :class => "btn")
          .span3
            -5.times do
              =dragonfly_image_tag(photographer.default_image, "50x50#", :class => "mr-1 mb-1")
    .span6
      -3.times do
        .row.mb-1
          .span1
            =image_placeholder("60x60")
          .span4
            %h4.upcase Related
            %p Mauris iaculis porttitor posuere. Praesent id metus massa, ut blandit odio. Proin quis tortor orci.
  .row
    .span12
      =options_panel do
        =back_link
        =link_if_can("Edit photographer", [:edit, photographer])