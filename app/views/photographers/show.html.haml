.container
  .row.mt-2
    .span12
      .pull-left.mr-2
        =image_for(photographer, "60x60#")
      %h2.big-title.nocase=title(photographer)
-if photographer.photos.present?
  =render("slideshows/slideshow", :slides => photographer.photos)
.container
  .row
    .span6
      -if photographer.bio.present?
        =simple_format(photographer.bio)
      -if false
        .well
          .row
            .span2
              %h3.mb-1.upcase These people are interested
              =link_to("Favourite", "#", :class => "btn")
            .span3
              -5.times do
                =dragonfly_image_tag(photographer.default_image, "50x50#", :class => "mr-1 mb-1")
    .span4.offset2
      -if !photographer.galleries.empty?
        %h2.normal-title.upcase.mb-1 Represented by
        .pull-left.clear.mb-2
          -photographer.galleries.each do |gallery|
            .row.mb-1
              .span1
                =link_to(image_for(gallery, "60x60#"), gallery)
              .span3
                =link_to_self(gallery)
      -if !photographer.links.empty?
        %h2.normal-title.upcase.mb-1 Contact
        .mb-2
          =render('links/list', :links => photographer.links)
      -if !photographer.user_tags.empty?
        %h2.normal-title.upcase.mb-1 Tags
        %ul.tag-list.tag-list-horizontal
          -photographer.user_tags.each do |tag|
            %li
              =link_to_tag(tag)
  .row
    .span12
      =options_panel do
        =back_link
        =link_if_can("Edit photographer", [:edit, photographer])
        =link_if_can("Delete photographer", [:destroy, photographer], :confirm => "Are you sure?")