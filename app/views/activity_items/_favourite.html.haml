.row.activity-item
  -if activity_item.resource.resource.is_a?(Photo)
    .span2
      =link_to activity_item.resource.resource, :class => "photo-image-link" do
        =image_for(activity_item.resource.resource, "140x140")
    .span2  
      =link_to_self(activity_item.user)
      collected
      =link_to "a photo", activity_item.resource.resource
      %div
        =time_ago_in_words(activity_item.created_at)
        ago
  -else
    .span2
      =link_to activity_item.user, :class => "photo-image-link" do
        =image_for(activity_item.user, "60x60")
    .span2
      =link_to_self(activity_item.user)
      favourited
      =link_to_self(activity_item.resource.resource)
      %div
        =time_ago_in_words(activity_item.created_at)
        ago


