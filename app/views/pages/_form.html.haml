=content_for(:head) do
  :javascript
    $(document).ready(function() {
      YmCms.Page.Form.init();  
    });
    
=semantic_form_for(@page, :multipart => true) do |form|
  =tabs('details', ['gallery', 'Gallery details'], 'slideshow', 'calls_to_action', 'edition', 'related_pages', :form => form)

  =form.buttons do
    =form.commit_button "Save"
    =#link_to("Cancel", page.new_record? ? pages_path : page, :class => "btn")