.col-xs-12
  %h1=@page.title
  -if @page.image
    .row.mb-2
      .col-md-8
        =image_for(@page, "620x")
  .row
    .col-md-12
      =contentize(@page.text)
    .col-md-12
      =options_panel do
        =link_if_can("Edit page", [:edit, @page])
        =link_if_can("Delete page", [:destroy, @page], :confirm => "Are you sure?") unless @page.slug.present?
        =link_if_can("New page", [:new, Page])
