.container
  .row
    .span12
      %h1.big-title
        %span#page_title.mercury-region{:"data-type" => "editable"}
          =raw(page.title)
-if page.slideshow
  =render("slideshows/slideshow", :slideshow => page.slideshow)
.container
  .row
    .span4
      %h2.mb-1
        =raw(page.title)
      .page_text
        -if page.text.blank? && !viewing_mercury_edit? && can?(:edit, page)
          #page_text
            =mercury_edit_link("Click here to add some page content", mercury_update_page_path(page))
        -else
          #page_text.mercury-region{:"data-type" => "editable"}
            =raw(page.text)
    .span4
      -if page.image
        =image_for(page, "250x")
      -else
        .placeholder250x
          &nbsp;
    .span4
      -if !page.photographers.empty?
        %h2.normal-title.upcase.mb-1 Artists
        .pull-left.clear.mb-2
          -page.photographers.each do |photographer|
            .row.mb-1
              .span1
                =link_to(image_for(photographer, "60x60#"), photographer)
              .span3
                =link_to_self(photographer)
                %br
                Photographer
      -if page.has_gallery_contact_details?
        %h2.normal-title.upcase.clear Contact
        %ul.unstyled.pull-left.clear.mb-2
          -if page.gallery_address.present?
            %li.gallery_address
              =simple_format(page.gallery_address)
          -if page.gallery_phone.present?
            %li.gallery_phone
              t:
              =page.gallery_phone
          -if page.gallery_fax.present?
            %li.gallery_fax
              f:
              =page.gallery_fax
          -if page.gallery_email.present?
            %li.gallery_email
              e:
              =auto_link(page.gallery_email)
          -if page.gallery_website.present?
            %li.gallery_website
              w:
              =link_to_url(page.gallery_website)
          -if page.gallery_facebook.present?
            %li.gallery_facebook
              fb:
              =link_to_url(page.gallery_facebook.gsub(/(http:\/\/)?(www\.)?/, ""))
      -if page.gallery_hours.present?
        %h2.normal-title.upcase Gallery hours
        %span.gallery_hours=simple_format(page.gallery_hours)
  
  .row
    .span12
      =options_panel do
        =back_link
        -if can?(:edit, page)
          =mercury_edit_link("Edit page content", mercury_update_page_path(page), :id => "mercury_edit_link")
        =link_if_can("Edit page", [:edit, page])
        =link_if_can("Delete page", [:destroy, page], :confirm => "Are you sure?") unless page.slug.present?
        -if can?(:new, Page)
          =link_if_can("New gallery", new_child_page_path(:parent_id => page.parent_id))