.block-view.row
  -[pages.shift(4), pages.shift(4)].each do |page_arr|
    -page_arr.each do |page|
      .block-item.span4
        .block-image.fade_in
          =link_to(image_for(page, "300x200#"), page) if page.image
        .block-text
          %h3.block-title=link_to_self(page)
          %p.list_date_and_tag
            =page.created_at.strftime("%e %B %Y")
            -page.category_list.each do |category|
              =tag_label(category.titleize)
          =link_to raw('&rarr; Read more'), page, :class => 'list_read_more'