=form.inputs do
  =form.input :first_name
  =form.input :last_name
  =form.input :email
  -if user.new_record?
    =form.input :password 
  -else
    =form.input :job_title
    =form.input :city
    #user_country_input.form-group.select.required
    =form.label :country, "Country *", :class => "control-label"
    .controls
      =form.country_select(:country, ["Netherlands"], :include_blank => true)
    =form.input :bio, :input_html => {:rows => 5, :class => "span4"}
    =form.input :retained_image, :as => :hidden
    =form.input :image, :as => :file
    =form.input :user_tag_list, :label => "Interests", :as => :select, :multiple => true, :collection => tag_list_options(:user_tags, user), :input_html => {:class => 'span8'}